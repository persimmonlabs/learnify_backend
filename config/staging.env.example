# Staging Environment Configuration
# Copy this file to staging.env and fill in the actual values

# Application
APP_NAME=backend-staging
APP_PORT=8080
APP_URL=https://staging.example.com
ENV=staging
LOG_LEVEL=debug

# Database
DATABASE_URL=postgres://user:password@staging-db.example.com:5432/backend_staging?sslmode=require
DATABASE_MAX_CONNECTIONS=25
DATABASE_MAX_IDLE_CONNECTIONS=10
DATABASE_CONNECTION_MAX_LIFETIME=300s

# Redis
REDIS_URL=redis://staging-redis.example.com:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_MAX_CONNECTIONS=10

# Docker
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE=your-org/backend
DOCKER_NETWORK=staging-network

# Deployment
DEPLOYMENT_STRATEGY=rolling
RUN_MIGRATIONS=true

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# External Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=staging-backend-uploads

# Authentication
JWT_SECRET=your_jwt_secret_key_for_staging
JWT_EXPIRATION=24h
SESSION_SECRET=your_session_secret_for_staging

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=staging@example.com
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@staging.example.com

# Feature Flags
FEATURE_NEW_API=true
FEATURE_BETA_USERS=true
FEATURE_DEBUG_MODE=true

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60s

# CORS
CORS_ALLOWED_ORIGINS=https://staging-frontend.example.com,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Security
SECURE_COOKIES=true
CSRF_ENABLED=true
HELMET_ENABLED=true

# Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=staging-backend-backups

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Performance
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=30s
GRACEFUL_SHUTDOWN_TIMEOUT=30s

# Cache
CACHE_TTL=300s
CACHE_ENABLED=true

# API Keys (External Services)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
SENDGRID_API_KEY=your_sendgrid_key

# Deployment Metadata
DEPLOY_VERSION=
DEPLOY_TIMESTAMP=
DEPLOY_BY=
